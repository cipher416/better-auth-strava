{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "STRAVA_CLIENT_ID",
        "STRAVA_CLIENT_SECRET",
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET",
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "VERCEL_URL",
        "VERCEL_BRANCH_URL",
        "NEXT_PUBLIC_VERCEL_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "DATABASE_URL",
        "STRAVA_CLIENT_ID",
        "STRAVA_CLIENT_SECRET",
        "BETTER_AUTH_URL",
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "VERCEL_URL",
        "VERCEL_BRANCH_URL",
        "NEXT_PUBLIC_VERCEL_URL"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
