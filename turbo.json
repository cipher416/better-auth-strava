{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL", "STRAVA_CLIENT_ID", "STRAVA_CLIENT_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["DATABASE_URL", "STRAVA_CLIENT_ID", "STRAVA_CLIENT_SECRET"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
